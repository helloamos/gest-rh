<div class="container">
	<div class="row">
	<div class="col-md-12">
	<div class="index-heading pull-left">
	<h3>Liste des mutations</h3>
	</div>
   <div class="pull-right">
   <p>
	<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_mutation_path, class: "btn btn-primary", remote: true %>
	</p>
	</div>
	</div>
 </div>
  <div class="row">
 <div class="col-lg-12">
	<div class="panel panel-default">
		  
			 
					<div class="panel-body">
		<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Matricule employe</th>
      <th>Etablissement</th>
      <th>Cause</th>
      <th>Date mutation</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @mutations.each do |mutation| %>
      <tr>
        <td><%= mutation.matricule_employe %></td>
        <td><%= mutation.etablissement %></td>
        <td><%= mutation.cause %></td>
        <td><%= mutation.date_mutation %></td>
      
        <td><%= link_to 'Edit', edit_mutation_path(mutation) %>
        <%= link_to 'Destroy', mutation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
	</div>
</div>
</div>
</div>
<div id="mutation-modal" class="modal fade"></div>

