<div class="container">
	<div class="row">
	<div class="col-md-12">
	<div class="index-heading pull-left">
	<h3>Liste des sanctions</h3>
	</div>
   <div class="pull-right">
   <p>
	<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_sanction_path, class: "btn btn-primary", remote: true %>
	</p>
	</div>
	</div>
 </div>
  <div class="row">
 <div class="col-lg-12">
	<div class="panel panel-default">
		  
			 
					<div class="panel-body">
		<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Matricule employe</th>
      <th>Duree sanction</th>
      <th>Type sanction</th>
      <th>Cause</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sanctions.each do |sanction| %>
      <tr>
        <td><%= sanction.matricule_employe %></td>
        <td><%= sanction.duree_sanction %></td>
        <td><%= sanction.type_sanction %></td>
        <td><%= sanction.cause %></td>
       
        <td><%= link_to 'Edit', edit_sanction_path(sanction) %>
  <%= link_to 'Destroy', sanction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
	</div>
</div>
</div>
</div>
<div id="sanction-modal" class="modal fade"></div>

