$("ul.errors").html("");
<% if @employe.errors.any? %>
  <% @employe.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".employes").html("<%= escape_javascript(render 'index') %>");
  $("#employe-modal").modal("hide");
 
<% end %>