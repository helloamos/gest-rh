      <div class="form-group">
        <%= form.label :sexe %>
        <%= form.select :sexe, Employe::EMPLOYE_SEXE, {prompt: "Veuillez sÃ©lectionner"}, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= form.label :date_naissance %>
        <%= form.date_field :date_naissance, id: :employe_date_naissance, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :lieu_naissance %>
        <%= form.text_field :lieu_naissance, id: :employe_lieu_naissance, class: "form-control" %>
      </div>

  </div>

  <div class="col-sm-6">
    <div class="form-group">
        <%= form.label :situation %>
        <%= form.text_field :situation, id: :employe_situation, class: "form-control" %>
