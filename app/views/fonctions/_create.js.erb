$("ul.errors").html("");
<% if @fonction.errors.any? %>
  <% @fonction.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".fonctions").html("<%= escape_javascript(render 'index') %>");
  $("#fonction-modal").modal("hide");
 
<% end %>