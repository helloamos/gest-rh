<h1>Type Conges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_conges.each do |type_conge| %>
      <tr>
        <td><%= type_conge.name %></td>
        <td><%= link_to 'Show', type_conge %></td>
        <td><%= link_to 'Edit', edit_type_conge_path(type_conge) %></td>
        <td><%= link_to 'Destroy', type_conge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

